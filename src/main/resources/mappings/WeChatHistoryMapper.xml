<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.xiaoma.mybatis.mapper.WeChatHistoryMapper">
	<resultMap id="WeChatUserResult" type="WeChatHistory">
		<id property="id" column="id" />
		<result property="type" column="type" />
		<result property="content" column="content" />
		<result property="userId" column="user_id" />
	</resultMap>

	<insert id="save" useGeneratedKeys="true" keyProperty="id" parameterType="WeChatHistory">
		insert into wechat_history
		(type, content, user_id, createDate)
		values
		(#{type}, #{content}, #{userId}, now())
	</insert>

	<update id="update" parameterType="WeChatHistory">
		update wechat_history
		<set>
			type = #{type},
			content = #{content},
			user_id = #{userId}
		</set>
		where id = #{id}
	</update>

	<delete id="delete">
		delete from wechat_history
		where id in
		<foreach collection="array" item="ids" open="(" separator="," close=")">
			#{ids}
		</foreach>
	</delete>

	<select id="queryAll" resultMap="WeChatUserResult">
		select
		*
		from wechat_history
	</select>

	<select id="queryById" parameterType="Long" resultMap="WeChatUserResult">
		select
		*
		from wechat_history
		where id = #{id}
	</select>

</mapper>